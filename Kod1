#include <iostream>  // Подключаем библиотеку для ввода и вывода
#include <random>    // Подключаем библиотеку для генерации случайных чисел
#include <vector>    // Подключаем библиотеку для работы с векторами
#include <algorithm> // Подключаем библиотеку для алгоритмов STL

using namespace std;

int main() {
    // Настройка генератора случайных чисел
    random_device rd; // Используем генератор случайных чисел от устройства
    mt19937 gen(rd()); // Инициализируем генератор mt19937
    uniform_int_distribution<> distrib(1, 100); // Определяем равномерное распределение от 1 до 100

    const int numberOfRandomNumbers = 10; // Количество генерируемых случайных чисел
    vector<int> randomNumbers; // Вектор для хранения случайных чисел

    // Генерируем случайные числа и добавляем их в вектор
    for (int i = 0; i < numberOfRandomNumbers; ++i) {
        randomNumbers.push_back(distrib(gen)); // Генерация числа и добавление в вектор
    }

    // Сортируем вектор для удобства
    sort(randomNumbers.begin(), randomNumbers.end());

    // Выводим сгенерированные случайные числа
    cout << "Сгенерированные случайные числа: ";
    for (const int& number : randomNumbers) {
        cout << number << " "; // Выводим каждое число из вектора
    }
    cout << endl; // Переход на новую строку после вывода всех чисел

    return 0; // Возвращаем 0, что означает успешное завершение программы
}
