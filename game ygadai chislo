//Прикольная программа 
#include <iostream>
#include <random>
#include <limits>

using namespace std;


int getPlayerGuess() {
    int guess;
    while (true) {
        cout << "Введите ваше предположение: ";
        cin >> guess;

        if (cin.fail()) { 
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n'); 
            cout << "Пожалуйста, введите число!" << endl;
        } else {
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            return guess;
        }
    }
}

int main() {
    random_device rd;
    mt19937 gen(rd());
    uniform_int_distribution<> distrib(1, 100);   

    int secretNumber = distrib(gen);
    int playerGuess = 0;
    int attempts = 0;

    cout << "Добро пожаловать в игру 'Угадай число'!" << endl;
    cout << "Я загадал число от 1 до 100. Попробуй его угадать!" << endl;

    while (playerGuess != secretNumber) {
        playerGuess = getPlayerGuess();
        attempts++;

        if (playerGuess < secretNumber) {
            cout << "Слишком маленькое число. Попробуйте снова." << endl;
        } else if (playerGuess > secretNumber) {
            cout << "Слишком большое число. Попробуйте снова." << endl;
        } else {
            cout << "Поздравляю! Вы угадали число " << secretNumber << " за " << attempts << " попыток." << endl;
        }
    }

    return 0;
}
