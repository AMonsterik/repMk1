#include <iostream>
#include <cstdlib>
#include <ctime>
#include <limits> // Для очистки потока ввода

using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    // Инициализация генератора случайных чисел
    srand(static_cast<unsigned int>(std::time(nullptr)));

    int lowerBound = 1; // Нижняя граница
    int upperBound = 100; // Верхняя граница

    cout << "Добро пожаловать в игру 'Угадай число'!" << endl;
    cout << "Введите нижнюю границу диапазона: ";
    cin >> lowerBound;
    cout << "Введите верхнюю границу диапазона: ";
    cin >> upperBound;

    if (lowerBound >= upperBound) {
        cout << "Неверный диапазон! Нижняя граница должна быть меньше верхней. Попробуйте снова." << endl;
        return 1;
    }

    int secretNumber = rand() % (upperBound - lowerBound + 1) + lowerBound; // Загаданное число
    int playerGuess = 0;
    int attempts = 0;

    cout << "Я загадал число от " << lowerBound << " до " << upperBound << ". Попробуй его угадать!" << endl;

    while (true) {
        cout << "Введите ваше предположение: ";

        if (!(cin >> playerGuess)) {
            cout << "Ошибка ввода! Пожалуйста, введите целое число." << endl;
            cin.clear(); // Сбросить состояние потока
            cin.ignore(numeric_limits<streamsize>::max(), '\n'); // Очистить буфер ввода
            continue;
        }

        attempts++;

        if (playerGuess < secretNumber) {
            cout << "Слишком маленькое число. Попробуйте снова." << endl;
        }
        else if (playerGuess > secretNumber) {
            cout << "Слишком большое число. Попробуйте снова." << endl;
        }
        else {
            cout << "Поздравляю! Вы угадали число " << secretNumber << " за " << attempts << " попыток." << endl;
            break;
        }
    }

    return 0;
}
